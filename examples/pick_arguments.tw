fn pick |
  condition: bool ;
  taken     = 1: i64,
  not_taken = 0: i64
| : i64 =
 if condition then taken else not_taken;

fn id | ;value: i64 | : i64 = x;

fn main = (
  pick(false);
  pick(true);
  pick(true; taken: 2);
  pick(false; not_taken: 3);

  pick(true;
    taken: 4,
    not_taken: 5);

  id(;value: 5);

  ()
);
